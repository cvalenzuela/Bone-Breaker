extends layout

block content

  if(titletwo != undefined)
    .row.text-center
      .col-md-4.col-md-offset-2.firsttitle
        .row
          .col-md-12.nytimes
            b
              p New York Times
        .row
          .col-md-12
            p=titleone

      .col-md-4.secondtitle
        .row
          .col-md-12.buzzfeed
            b
              p The Onion
        .row
          .col-md-12
            p=titletwo
  if(message)
    .col-md-6.col-md-offset-3.text-center.message
      h1=message

  .col-md-6.col-md-offset-3.text-center.button
    form(method='POST' action='/breaker')
      button Breaker!
